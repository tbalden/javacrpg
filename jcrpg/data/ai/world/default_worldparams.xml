<worldparams name="default" author="eburriel@yahoo.com" version="1.0">
	<!-- reference list of ClimatBelts used in world generation -->	
	<climats-ref>
		<climatBelt id="Arctic"
			implementation="org.jcrpg.world.climate.impl.arctic.Arctic"
			sizeMuls="1" />
		<climatBelt id="Continental"
			implementation="org.jcrpg.world.climate.impl.continental.Continental"
			sizeMuls="4" />
		<climatBelt id="Desert"
			implementation="org.jcrpg.world.climate.impl.desert.Desert"
			sizeMuls="2" />
		<climatBelt id="Tropical"
			implementation="org.jcrpg.world.climate.impl.tropical.Tropical"
			sizeMuls="2" />
	</climats-ref>
	<!-- reference list of Geography used in world generation -->
	<geos-ref>
		<geo id="Mountain"
			implementation="org.jcrpg.world.place.geography.Moutain" />
		<geo id="Plain"
			implementation="org.jcrpg.world.place.geography.Plain" />
		<geo id="Forest"
			implementation="org.jcrpg.world.place.geography.Forest" />
		<geo id="Ocean"
			implementation="org.jcrpg.world.place.water.Ocean" />
		<geo id="Cave"
			implementation="org.jcrpg.world.place.geography.sub.Cave" />
		<geo id="River"
			implementation="org.jcrpg.world.place.water.River" />
	</geos-ref>
	<!-- random  -->
	<random seed="1" />
	<!-- all things about size -->
	<size-params sizeX="40" sizeY="2" sizeZ="40" magnification="40"
		heightRatio="1.0" normalSize="40"/>
	
	<!-- geology main organisation -->
	<geology foundation-id="Ocean" landDensity="10" landMass="80">
		<main-stream>
			<geo ref-id="Plain" likeness="4" />
			<geo ref-id="Forest" likeness="8" />
			<geo ref-id="Mountain" likeness="4" />
		</main-stream>
		<additionnal>
			<geo ref-id="River" likeness="4" />
			<geo ref-id="Cave" likeness="4" />
		</additionnal>
	</geology>
	
</worldparams>

